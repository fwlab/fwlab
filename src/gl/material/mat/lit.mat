material {
    name : lit_material,
    shadingModel : lit,
    parameters : [
        {
            type : float4,
            name : baseColor
        },
        {
            type : float,
            name : metallic
        },
        {
            type : float,
            name : roughness
        },
        {
            type : float,
            name : reflectance
        },
        {
            type: float3,
            name: sheenColor
        },
        {
            type: float,
            name: sheenRoughness
        },
        {
            type: float,
            name: clearCoat
        },
        {
            type: float,
            name: clearCoatRoughness
        },
        {
            name: anisotropy,
            type: float
        },
        {
            type: float3,
            name: anisotropyDirection
        },
        {
            type: float,
            name: ambientOcclusion
        },
        {
            type: float3,
            name: normal
        },
        {
            type: float3,
            name: bentNormal
        },
        {
            type: float3,
            name: clearCoatNormal
